pipeline{
    agent { label 'GOL'}
    triggers{
        cron('H * * * *')
        pollSCM('* * * * *')
    }
    parameters{
        string(name: 'MAVEN', defaultValue: 'mvn package', description: 'Ok')
        choice(name: 'BRANCH', choices: ['continuous-delivery', 'master', 'feature-delivery'], description: 'Pick something')
    }

stages{
    stage('scm'){
        steps{

            git branch: "${params.BRANCH}" , url: 'https://github.com/Shravankss/game-of-life.git'


            
        }
    }
    stage('build'){

        steps{
            sh "${params.MAVEN}"


        }
        stash includes: '**/gameoflife.war', name: 'golwar'
    }
}
stage('devserver'){
            agent { label 'RHEL,'}
            steps {
                unstash name: 'golwar'
            }
        }
    }

post {
    success{
        archive 'gameoflife-web/target/gameoflife.war'
        junit '**/TEST-*xml'
    }
    

}
